<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable name="item" type="jp.codingkakapo.forgetcheck.model.AnxietyModel"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/checklist_item_linear_layout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:paddingHorizontal="4dp"
        android:paddingVertical="8dp"
        android:background="@{item.checked ? @color/green500 : @color/white }"
        android:descendantFocusability="blocksDescendants">
        <CheckBox
            android:id="@+id/checklist_item_checkbox"
            android:checked="@{item.checked}"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:gravity="center"
            android:text='@{item.checked ? "OK" : "" }'
            android:textColor="@color/white"
            android:textSize="15sp"
            app:layout_constraintHorizontal_weight="0.15"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/checklist_item_textview"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent">
        </CheckBox>
        <com.google.android.material.textview.MaterialTextView
            app:layout_constraintHorizontal_weight="0.6"
            android:id="@+id/checklist_item_textview"
            android:text="@{item.Name}"
            android:layout_gravity="center_horizontal"
            android:gravity="center_horizontal"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@id/checklist_item_button"
            app:layout_constraintStart_toEndOf="@id/checklist_item_checkbox"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/gray800"
            android:ellipsize="end"
            android:textSize="28sp"/>
        <com.google.android.material.button.MaterialButton
            app:layout_constraintHorizontal_weight="0.25"
            android:id="@+id/checklist_item_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/checklist_item_textview"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            app:icon="@drawable/delete_black_24dp"
            android:textColor="@color/gray600"
            android:text="削除"
            android:textSize="14sp"
            app:iconSize="14sp"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>